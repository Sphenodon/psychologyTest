<div class="p-4">
    <div class = "container" id="SP">
        <div class="panel well m-auto" style="width: 350px; padding: 25px; text-align: center;" id="authorization">
            <h2>Вход</h2>
            <p style="margin-bottom: 35px">только для администраторов</p>
            <form name="login">
                <div class="form-group">
                    <label>Имя пользователя</label> <input class="form-control input-lg" type="text" id="login" />
                </div>
                <div class="form-group">
                    <label>Пароль</label> <input class="form-control input-lg" type="text" id="password" />
                </div>
                <div class="form-group mt-3">
                    <input type="button" value="Вход" class="btn btn-success" id="btn1" />
                    <button value="Выход" class="btn btn-danger" id="btn2">Выход</button>
                </div>
            </form>
        </div>
        <div class="m-auto" style="width: 75px;">
            <a href="/admin" type="button" class="btn btn-dark admin" id="">Админ</a>
        </div>
    </div>
</div>

